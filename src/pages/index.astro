---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
---

<Layout title="Arsenicxxx">
	<main>
		<h1><span class="titulo">Töxic Squad Official Website</span></h1>
		<!-- este es el titulo de la pagina-->
		<p class="instructions">
			Bienvenidos al sitio oficial del <strong>"Töxic Squad"</strong>,
			aqui podras encontrar links a nuestras Plataformas Musicales, Redes
			Sociales, Merch, etc. <!--este es el texto principal-->
		</p>
		<ul role="list" class="grid-card">
			<!-- estas son las tarjetas-->
			<Card
				href="https://linktr.ee/arsenicxxx/"
				title="Arsenicxxx"
				body="LinkTree"
			/>
			<Card
				href="https://www.instagram.com/smokeylil1400//"
				title="Smokeylil1400"
				body="Instagram"
			/>
		</ul>
	</main>
</Layout>
<style>
	.titulo {
		font-weight: bold;
		color: greenyellow;
	}
	h1 {
		text-align: center;
		color: greenyellow;
	}
	.grid-card {
		display: grid;
		grid-template-columns: 1fr 1fr;
		grid-gap: 10px;
		max-width: 768px;
	}
	.instructions {
		text-align: center;
		color: greenyellow;
	}
</style>
